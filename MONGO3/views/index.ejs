<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatbook</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>

    <h2>All Chats....</h2>
    <form method="get" action="/chats/new" >
        <button>New Chat</button>
    </form>
    <br>

    <% for(let chat of allChats){ %>
     <div class="divclass">
        <p class="fromclass">From: <i> <%= chat.from %> </i></p>
        <div class="msgclass">
            <p ><%= chat.msg %></p>
                <form method="GET" action="/chats/<%= chat._id %>/edit">
                <button>Edit Message</button>
            </form>
            <br>
            <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                <button>Delete Message</button>
                </form>
            </div>            
        <p class="toclass">To: <i><%= chat.to %> </i></p>
        <p> <%=  chat.createdAt.toString().split(' ')[4] %></p>
        <p> <%=  chat.createdAt.toString().split(' ').slice(0,4).join(" ") %></p>
        <hr>
      </div>
      <% }  %>

</body>
</html>

